{
  "name": "count-timer",
  "productName": "Count Timer",
  "version": "1.0.0",
  "description": "This repository contains an application that manages your future events such as meetings, parties, lectures, etc. Of course, with a nice interface.",
  "license": "MIT",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "test": "nodemon public/scripts/test.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedro-henrique-sb/count-time.git"
  },
  "keywords": [],
  "author": "Pedro Henrique",
  "email": "pyter.dev@gmail.com",
  "bugs": {
    "url": "https://github.com/pedro-henrique-sb/count-time/issues"
  },
  "homepage": "https://github.com/pedro-henrique-sb/count-time#readme",
  "dependencies": {
    "better-sqlite3": "^7.4.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "electron": "^12.0.7",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^2.3.5",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.0",
    "nodemon": "^2.0.7"
  },
  "build": {
    "appId": "com.electron.count-timer",
    "dmg": {
      "title": "Count Timer",
      "icon": "./public/images/icons-icns/logo.icns",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "maintainer": "Pedro Henrique",
      "icon": "./public/images/icons-png/256x256.png",
      "category": "Utility",
      "executableName": "Count Timer",
      "target": [
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "./public/images/icons-ico/logo.ico"
    }
  }
}
